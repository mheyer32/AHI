#  $Id$
#
#  Makefile.in for the AddAudioModes program
#


#
# Autoconfig stuff
########################################

@SET_MAKE@

top_srcdir	= @top_srcdir@
srcdir		= @srcdir@
prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@

CC		= @CC@
INSTALL		= @INSTALL@
INSTALL_PROGRAM	= @INSTALL_PROGRAM@

CPPFLAGS	= @CPPFLAGS@ -I${top_srcdir}
CFLAGS		= @CFLAGS@
LDFLAGS		= @LDFLAGS@


VPATH		= @srcdir@


#
# Files
########################################

SOURCES		= AddAudioModes.c
OBJECTS		= $(SOURCES:%.c=%.o)
TARGET		= AddAudioModes


#
# Targets
########################################

.PHONY:		all clean distclean maintainer-clean install

all:		$(TARGET)

clean:
	$(RM) $(TARGET) version.h *.o *.bak *~ \#*\# core Makefile.dep

distclean:	clean
	$(RM) Makefile

maintainer-clean: distclean

install:	$(TARGET)
	$(INSTALL) --directory $(bindir)
	$(INSTALL_PROGRAM) --strip $(TARGET) $(bindir)/$(TARGET)

version.h:	AddAudioModes.c
	@echo Creating $@
	@grep '$$Id' AddAudioModes.c | sed -e 's/^.*Id: .* \(.*\)\.\(.*\) ..\(..\)\/\(..\)\/\(..\).*/#define VERS "\1.\2 (\5.\4.\3)"/' > version.h


#
# Auto-remake autoconf stuff
########################################

Makefile: Makefile.in ../config.status
	(cd .. && ./config.status)


#
# Dependencies
########################################

Makefile.dep:	$(SOURCES)
#	-@$(CC) $(CPPFLAGS) $(CFLAGS) -MM $(SOURCES) > $@
	touch $@
	makedepend -f $@ $(SOURCES)

include Makefile.dep
